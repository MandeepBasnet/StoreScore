# Xibo CMS API Configuration
# API Base URL - Your Xibo CMS installation
API_BASE_URL=https://app.storescore.io/api

# Xibo CMS API Credentials (from Applications in CMS Admin)
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
# Local: http://localhost:5173
# Production: https://your-app.vercel.app
FRONTEND_URL=http://localhost:5173

# Database Configuration (if needed)
# MONGODB_URI=mongodb://localhost:27017/storescore

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h

# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key_here
